{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*"
    ]
}
